<!DOCTYPE html>

<html>

<head>
  <meta charset="utf-8">
  <title>Chat | ChatApp</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css?family=Domine" rel="stylesheet">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <link rel="stylesheet" href="/stylesheets/styles.css">
 
</head>

<body class="chat">
  
  <div class="chat__sidebar">
      <a href="/logout"  class="btn btn-danger center-block" style="font-family:Domine" >LOGOUT</a>
    <h3 style="">Active Users</h3>
    <div id="users" style="font-size:20px"></div>
  </div>

  <div class="chat__main">
     
    <ol id="messages" class="chat__messages"></ol>

    <div class="chat__footer">
      <form id="message-form" name="form">
        <input name="message" type="text" placeholder="Enter A Message..." autofocus autocomplete="off"/>
        <button class="btn btn-primary" >Send</button>
      <button id="send-location" class="btn btn-primary" >Send location</button> &nbsp
      <label  style="padding:10px" class="btn btn-primary"> Add File
      <input id="#add-file" type="file" name="add-file" size="60" style="display:none">
      </label> 
      </form>
    </div>
  </div>

  <script id="message-template" type="text/template">
    <li class="message">
      <div class="message__title">
        <img src="{{image}}" class="img-circle" width=50px height=50px>
       &nbsp <a href="/profile/{{from}}"><h4 class="styling">{{from}}</h4></a>
        <span class="time">{{createdAt}}</span>
      </div>
      <div class="message__body">
        <p>{{text}}</p> 
      </div>
    </li>
  </script>

  <script id="message-template1" type="text/template">
    <li class="message">
      <div class="message__title">
        <img src="{{image}}"  class="img-circle" width=50px height=50px>
        <a href="/profile/{{from}}"><h4 class="styling">{{from}}</h4></a>
        <span class="time">{{createdAt}}</span>
      </div>
      <div class="message__body">
        <p > <a href="{{url}}" >Current Location</a></p>
      </div>
    </li>
  </script>

  <script id="message-template2" type="text/template">
    <li class="message">
      <div class="message__title">
        <img src="{{image}}" class="img-circle"  width=50px height=50px>
        <a href="/profile/{{from}}"><h4 class="styling">{{from}}</h4></a>
        <span class="time">{{createdAt}}</span>
      </div>
      <div class="message__body"> 
        <p> <a href="{{file}}" download>{{fileName}}</a></p>
      </div>
    </li>
  </script>


  <script id="location-message-template" type="text/template">
    <li class="message">
      <div class="message__title">
          <img src="{{image}}" class="img-circle" width=50px height=50px>
        <h4>{{from}}</h4>
        <span>{{createdAt}}</span>
      </div>
      <div class="message__body">
        <p>
          <a href="{{url}}" target="_blank"><h4>My current location</h4></a>
        </p>
      </div>
    </li>
  </script>

  <script id="file-message-template" type="text/template">
    <li class="message">
      <div class="message__title">
          <img src="{{image}}"class="img-circle" width=50px height=50px>
        <h4>{{from}}</h4>
        <span>{{createdAt}}</span>
      </div>
      <div class="message__body">
        <p>
         <a href="{{file}}" download>{{fileName}}</a> 
        </p>
      </div>
    </li>
  </script>  

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/libs/jquery-3.1.0.min.js"></script>
  <script src="/js/libs/moment.js"></script>
  <script src="/js/libs/mustache.js"></script>
  <script src="/js/libs/deparam.js"></script>
  <script src="/js/chat.js"></script>
</body>

</html>
